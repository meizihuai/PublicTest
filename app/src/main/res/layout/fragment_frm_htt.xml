<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrmHTTP">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:paddingTop="5dp"
          android:orientation="horizontal">
          <ImageView
              android:id="@+id/iv_baidu"
              android:layout_width="0dp"
              android:layout_height="40dp"
              android:layout_weight="0.2"
              android:src="@drawable/ico_baidu" />
          <ImageView
              android:id="@+id/iv_taobao"
              android:layout_width="0dp"
              android:layout_height="40dp"
              android:layout_weight="0.2"
              android:src="@drawable/ico_taobao" />
          <ImageView
              android:id="@+id/iv_souhu"
              android:layout_width="0dp"
              android:layout_height="40dp"
              android:layout_weight="0.2"
              android:src="@drawable/ico_souhu" />
          <ImageView
              android:id="@+id/iv_toutiao"
              android:layout_width="0dp"
              android:layout_height="40dp"
              android:layout_weight="0.2"
              android:src="@drawable/ico_toutiao" />
          <ImageView
              android:id="@+id/iv_tencent"
              android:layout_width="0dp"
              android:layout_height="40dp"
              android:layout_weight="0.2"
              android:src="@drawable/ico_tencent" />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
          <WebView
              android:id="@+id/webView"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
          </WebView>

      </LinearLayout>
  </LinearLayout>

</FrameLayout>